<h1>Listing chats</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Message</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @chats.each do |chat| %>
    <tr>
      <td><%= chat.name %></td>
      <td><%= chat.message %></td>
      <td><%= link_to 'Show', chat %></td>
      <td><%= link_to 'Edit', edit_chat_path(chat) %></td>
      <td><%= link_to 'Destroy', chat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

